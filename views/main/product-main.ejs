<div class="jumbotron" id="navbar-gap" style="background-image:url(images/home_slider_1.jpg)">
  <div class="container">
    <h1 class="text-center">Find your favourite Product</h1>
    <p class="text-center">Search many of Ecommerce products</p>
    <div class="row">
      <div class="">
        <div class="input-group">
            <input type="text" id="search" name="search_term" value="" class="form-control input-lg" placeholder="Search for a product ..." >
            <span class="input-group-btn">
            <button type="submit" id="searchBtn" name="button"  class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search">Search</i></button>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="container">

  <div class="row" id="searchResults">

    <% for (var i=0; i<products.length; i++){ %>

    <div class="col-md-4">
      <a href="/product/<%=products[i]._id %>">
        <div class="thumbnail">
          <img src="<%=products[i].image %>">
          <div class="caption">
            <h3><%=products[i].name %></h3>
            <p><%=products[i].category.name %></h3>
              <p>$<%=products[i].price %></p>
          </div>
        </div>
      </a>
    </div>
    <% } %>

     <p>GoPageNumber :</p>
    <ul class="pagination text-center" id="belowNum">
      <li>
        <% for(var i=0;i<=pages;i++) {%>
        <% if (i === 1) { %>
      <li><a href="/" class="text-white bg-dark"><%= " "+ i %></a></li>
      <% } else{ %>
      <pre><b><li><a href="/page/<%= i %>" class="text-white bg-dark"><%=" "+i %></a></li></b></pre>

      <% } %>
      <% } %>
      </li>
    </ul>
  </div>
</div>
